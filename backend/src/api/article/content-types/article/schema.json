{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Blog articles and resources"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["tech", "press", "tutorial", "news"]
    },
    "author": {
      "type": "string"
    },
    "publishedAt": {
      "type": "datetime"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "tags": {
      "type": "json"
    }
  }
}

